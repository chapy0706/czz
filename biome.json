{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "files": {
    "ignore": ["node_modules", "dist", "coverage"]
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useNamingConvention": "error",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case", "camelCase", "PascalCase"]
          }
        }
      }
    }
  }
}